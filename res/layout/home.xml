<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome" 
            android:textColor="#ff00"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_eid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView1"
            android:layout_alignTop="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="EZZGXXO" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1">
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Annual Leave Information" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2" >

        <TableLayout
            android:id="@+id/tablelayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3"
            android:shrinkColumns="0,1,2,3" >
           
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:text="Type" />

                <TextView
                    android:id="@+id/tv_lily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="LILY" />

                <TextView
                    android:id="@+id/tv_slty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="SLTY" />

                <TextView
                    android:id="@+id/tv_alty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="ALTY" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_entitled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="Entitled" />

                <TextView
                    android:id="@+id/tv_entitled_lily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />
                   

                <TextView
                    android:id="@+id/tv_entitled_slty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
      				android:gravity="center" />
                    

                <TextView
                    android:id="@+id/tv_entitled_alty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
   					android:gravity="center" />
                    
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_taken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="Taken" />
                

                <TextView
                    android:id="@+id/tv_taken_lily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
           			android:gravity="center"/>
                     

                <TextView
                    android:id="@+id/tv_taken_slty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                     

                <TextView
                    android:id="@+id/tv_taken_alty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>                   
                     
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_remained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                	android:text="Remained"/>                   

                <TextView
                    android:id="@+id/tv_remained_lily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
          			android:gravity="center" />
                  

                <TextView
                    android:id="@+id/tv_remained_slty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
               		android:gravity="center" />
                    

                <TextView
                    android:id="@+id/tv_remained_alty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:gravity="center"/>
                     
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        >

        <TextView
            android:id="@+id/tv_employment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employment Date:" />

        <TextView
            android:id="@+id/tv_employment_date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/tv_employment_date"
			android:layout_alignBottom="@+id/tv_employment_date" />
           

        <TextView
            android:id="@+id/tv_job_starting_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_below="@+id/tv_employment_date"
            android:text="Job Starting Year:" />

        <TextView
            android:id="@+id/tv_job_starting_year_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
 			android:layout_toRightOf="@+id/tv_job_starting_year"
 			android:layout_alignBottom="@+id/tv_job_starting_year"
 			android:layout_alignTop="@+id/tv_job_starting_year"/>
       

    </RelativeLayout>

</RelativeLayout>